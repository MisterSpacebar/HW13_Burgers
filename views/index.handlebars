<h1>Burger</h1>

<h2>Burgers that have been eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> cats/cat-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Fresh, un-eaten burgers</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger eat=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Burger?</label><br>
    <input type="radio" name="eaten" value="1" checked> Fresh!<br>
    <input type="radio" name="eaten" value="0"> Eaten :(
  </div>

  <button type="submit">Add Burger</button>
</form>
